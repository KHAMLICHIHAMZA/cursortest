# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/malocauto?schema=public"

# JWT
# ⚠️ CRITIQUE: Générer un secret fort pour la production (minimum 64 caractères)
# Commande pour générer: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Exemple de secret généré: 0a5ef4f3e2e2a171b991a40a8bbbfcfc3a384e414d675ba0b627524464238697ab183869f69fba66f7bfe145c1ffbb27bb35c3d252c5cda754871a363afd16c3
JWT_SECRET=your-super-secret-jwt-key-change-in-production-MINIMUM-64-CHARACTERS-REQUIRED
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-MINIMUM-64-CHARACTERS-REQUIRED
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=3000
NODE_ENV=development

# Frontend URLs (for CORS + reset password)
FRONTEND_URL=http://localhost:3001
FRONTEND_WEB_URL=http://localhost:3001
FRONTEND_ADMIN_URL=http://localhost:5173
FRONTEND_AGENCY_URL=http://localhost:8080
# Optional: Expo web or mobile web URL
MOBILE_WEB_URL=http://localhost:8081

# Upload Path (optional - default: backend/uploads/)
# UPLOAD_PATH=C:/Projects/malocauto-uploads
# Example: UPLOAD_PATH=C:/Users/YourName/Documents/malocauto-images

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@malocauto.com

# S3 Compatible Storage (for documents, photos)
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=
S3_REGION=

# CMI Payment (Maroc)
CMI_MERCHANT_ID=
CMI_SECRET_KEY=
CMI_TEST_MODE=true

# WhatsApp Business API
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# AI Services
OPENAI_API_KEY=
VISION_API_KEY=

# V2 Outbox Processor (Domain Events backbone)
# Enable/disable background outbox processing
OUTBOX_PROCESSOR_ENABLED=true
# Polling interval (ms)
OUTBOX_PROCESSOR_INTERVAL_MS=2000
# Max events per tick
OUTBOX_PROCESSOR_BATCH_SIZE=50
# Retry policy
OUTBOX_PROCESSOR_MAX_ATTEMPTS=10
OUTBOX_PROCESSOR_BASE_DELAY_MS=2000
OUTBOX_PROCESSOR_MAX_DELAY_MS=300000

# 2FA
TWO_FACTOR_ISSUER=MalocAuto
